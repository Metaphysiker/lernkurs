<%= render "layouts/navigation" %>

<% noindex %>
<div class="container my-3">
  <h3 class="text-center">Registrierung</h3>
  <div class="card">
    <div class="card-body">
      <p>
        Registrierung für die Klasse: <b><%= @code %></b>
      </p>
      <hr />
      <p>
        Bitte gib hier deinen <b>Vornamen</b> ein!
      </p>
      <p>
        <div class="input-group input-group-lg mb-3">
        <input type="text" name="firstname" class="form-control" placeholder="Vornamen hier eingeben" aria-label="..." aria-describedby="basic-addon2">
      </div>
      </p>
      <p>
        <button type="button" id="send" class="btn btn-info btn-lg my-3">Registrieren!</button>
      </p>
    </div>
  </div>



  <!-- Modal -->
  <div class="modal fade animated tada" id="registered" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Registrierung erfolgreich!</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
<%= link_to 'Zum Kurs-Überblick zurückkehren', root_path, class: "btn btn-info text-white" %>
        </div>
      </div>
    </div>
  </div>

</div>

<script>
  $( document ).ready(function() {
    console.log("register loaded!");


    $( "#send" ).click(function() {
      //var code = $('input[name="code"]').val();
      var code = "<%= @code %>";
      console.log(code);
      var firstname = $('input[name="firstname"]').val();
      setGroup(code, firstname);
      $('input[name="firstname"]').addClass("is-valid");
      setTimeout(function(){
          $('#registered').modal('show');
        }, 600);
    });

  });
</script>
