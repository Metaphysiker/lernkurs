
<%= simple_form_for(@survey) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :counter1 %>
    <%= f.input :counter2 %>
    <%= f.input :answer1 %>
    <%= f.input :answer2 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
