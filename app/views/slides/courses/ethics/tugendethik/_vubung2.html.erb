<script>
  $( document ).ready(function() {
    console.log("vubung2 loaded!");

    var points = 100;
    var score = 0;

    $( ".tugendhaftf" ).click(function() {

      if($(this).attr("value") === "tugendhaft"){
        $(".modal-body").append(
          `<p class="text-center lead">
              Du hast ${points} Punkte erhalten!
            </p>
          `
        );
        addPointsToCourse(4, "vubung2", points);
        $(this).animate({backgroundColor: "#32CD32", color: "#FFFFFF" }, 200, function(){
          setTimeout(function(){
              $('#vubung2m').modal('show');
            }, 600);
        });
      } else {
        $(this).animate({backgroundColor: "#DC143C", color: "#FFFFFF" }, 200);
        points = points - 50;
      }
    });

  });
</script>
