<script>
  $( document ).ready(function() {
    console.log("bank2s loaded!");

    var points = 100;

    $( ".kbewertungs" ).click(function() {

      if($(this).attr("value") === "kbewertungs"){
        $(".modal-body").append(
          `<p class="text-center lead">
              Du hast ${points} Punkte erhalten!
            </p>
          `
        );
        addPointsToCourse(1, "bank2s", points);
        $(this).animate({backgroundColor: "#32CD32", color: "#FFFFFF" }, 200, function(){
          setTimeout(function(){
              $('#bank2s').modal('show');
            }, 600);
        });
      } else {
        $(this).animate({backgroundColor: "#DC143C", color: "#FFFFFF" }, 200);
        points = points - 50;
      }
    });

  });
</script>
