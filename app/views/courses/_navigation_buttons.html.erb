<div class="text-center">
  <button type="button" id="get-previous-slide" class="previous-next-button get-slide-button <%= "invisible" if current_slide <= 0 %> mx-2" slide="<%= current_slide - 1 %>">ZurÃ¼ck</button>
  <%= current_slide + 1 %> / <%= course.slides.count %>
  <button type="button" id="get-next-slide" class="previous-next-button get-slide-button <%= "invisible" if current_slide == course.slides.count-1 %> mx-2" slide="<%= current_slide + 1 %>">Weiter</button>
  |
  <button type="button" class="ml-1 btn btn-info" data-toggle="modal" data-target="#statusModal">
    <%= fa_icon "user-circle" %>
  </button>
</div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Mein Profil</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "/courses/status", account: @account, course: course %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Schliessen</button>
      </div>
    </div>
  </div>
</div>
