<% if @account.courses.include?(course) %>

  <% if @account.attendances.where(course_id: course.id).first.status == 'COMPLETED' %>
  <div class="card mb-4 completed-background">
    <% if false %>
        <%= image_tag course.avatar, class: "card-img-top" %>
        <% else %>
        <%= image_tag(course.name_of_picture, class: "card-img-top") %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><b><%= course.title %></b></h5>
      <hr />
      <p class="card-text">
        <b>Gesammelte Punkte: </b> <%= @account.attendances.where(course_id: course.id).first.points %>
      </p>
      <hr />
      <p class="card-text">
        <b>Erhaltener Orden: </b>
      </p>
      <% if @account.attendances.where(course_id: course.id).first.result1.blank? || (@account.attendances.where(course_id: course.id).first.result1 == "Deontologie") %>
      <div class="text-center rounded border philosopiech-background">
        <%= image_tag("konsequentialismus-badge.png", class: "img-fluid") %>
      </div>
      <% else %>
      <div class="text-center rounded border white-bg p-2 my-3">
        <%= image_tag("deontologie-badge.png", class: "img-fluid") %>
      </div>
      <% end %>

    </div>
    <div class="card-footer">
      <%= link_to "Kurs wiederholen", course_path(course), class: "btn btn-info text-white" %>
    </div>
  </div>
  <% else %>
  <div class="card mb-4 started-background">
    <% if false %>
        <%= image_tag course.avatar, class: "card-img-top" %>
        <% else %>
        <%= image_tag(course.name_of_picture, class: "card-img-top") %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><b><%= course.title %></b></h5>
      <hr />
      <p class="card-text">
        <b>Gesammelte Punkte: </b> <%= @account.attendances.where(course_id: course.id).first.points %>
      </p>
      <hr />
      <p class="card-text"><%= course.description %></p>

    </div>
    <div class="card-footer">
      <%= link_to "Kurs fortsetzen", course_path(course), class: "btn btn-info text-white" %>
    </div>
  </div>

  <% end %>

  <% else %>
  <div class="card mb-4 unstarted-background">
    <% if false %>
        <%= image_tag course.avatar, class: "card-img-top" %>
        <% else %>
        <%= image_tag(course.name_of_picture, class: "card-img-top") %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><b><%= course.title %></b></h5>
      <p class="card-text"><%= course.description %></p>

    </div>
    <div class="card-footer">
      <%= link_to 'Mit Kurs anfangen', course_path(course), class: "btn btn-info text-white" %>
    </div>
  </div>

<% end %>
