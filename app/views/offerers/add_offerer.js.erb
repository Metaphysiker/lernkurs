var record_id = "#process_to_create_home_offer";
var errors = <%= raw @offerer.errors.full_messages %>;

if (jQuery.isEmptyObject(errors)) {
  console.log("keine Fehler");

  window.location.href = "<%= offerer_path(@offerer) unless @offerer.id.nil? %>";

} else {
  console.log("Fehler vorhanden");

  $(record_id)[0].scrollIntoView();

    content = $("<%= escape_javascript( render 'offerers/form_for_process_to_create_home_offer', offerer: @offerer ) %>");
    $(record_id).fadeOut("fast", function(){
      $(record_id).empty().append(content).fadeIn("fast");
    });

}
