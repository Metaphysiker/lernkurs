  <div class="form-inputs">
    <div class="row">
      <div class="col-6">
        <%= f.input :firstname, placeholder: 'Max', required: true %>
      </div>
      <div class="col-6">
        <%= f.input :lastname, placeholder: 'Mustermann', required: true %>
      </div>
    </div>
    <hr />
    <%= f.input :street, placeholder: 'Hauptstrasse 5', required: true %>
    <div class="row">
      <div class="col-6">
        <%= f.input :city, placeholder: 'ZÃ¼rich', required: true %>
      </div>
      <div class="col-6">
